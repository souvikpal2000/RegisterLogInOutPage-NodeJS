<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerLinks}}
     <title>Login</title>
</head>
<body>
    {{>navbar}}

     <div class="login">
			<div class="container">
				<div class="mx-auto mb-3 message">
					<h5>{{message}}</h5>
				</div>
				
				<form method="POST" action="/login">
					<div class="form-group row justify-content-center">
						<div class="col-12 col-md-6">
							<div class="input-group mb-3">
								<span class="input-group-text" id="inputGroup-sizing-default"><b>Email</b></span>
								<input type="email" name="email" id="email" class="form-control" aria-label="Sizing example input" required aria-describedby="inputGroup-sizing-default">
							</div>
						</div>
					</div>
	
					<div class="form-group row justify-content-center">
						<div class="col-12 col-md-6">
							<div class="input-group mb-3">
								<span class="input-group-text" id="inputGroup-sizing-default"><b>Password</b></span>
								<input type="password" name="password" id="password" class="form-control" aria-label="Sizing example input" required aria-describedby="inputGroup-sizing-default">
							</div>
						</div>
					</div>
						
					<div class="form-group row justify-content-center">
						<div class="col-md-6">
							<button type="submit" class="btn btn-success">Login</button>
						</div>
					</div>
				</form>
			</div>
		</div>
   
    {{>footer}}
</body>
{{>footerLinks}}
</html>